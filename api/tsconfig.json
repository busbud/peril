{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "out",
    "lib": ["esnext", "dom"], // Re:dom https://github.com/graphcool/graphql-request/issues/26#issuecomment-354482903
    "sourceMap": true,
    "rootDir": "source",
    "allowJs": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "pretty": true
  },
  "exclude": [
    "out",
    "source/danger/_tests/fixtures",
    "runner/*",
    "dangerfile_runtime_env",
    "node_modules",
    "wallaby.js",
    "migrations",
    "dangerfile.lite.ts"
  ]
}
